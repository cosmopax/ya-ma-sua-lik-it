{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "ya-ma-sua-lik-it",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "splash.html",
        "inline": true
      },
      "game": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Rift Relay Post",
        "description": "Drop a Rift Relay arena into this subreddit",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Rift Relay Settings",
        "description": "Configure game settings",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/example-form"
      }
    ]
  },
  "forms": {
    "exampleForm": "/internal/form/example-submit"
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch"
  },
  "marketingAssets": {
    "icon": "assets/icon.png"
  },
  "dev": {
    "subreddit": "ya_ma_sua_lik_it_dev"
  }
}